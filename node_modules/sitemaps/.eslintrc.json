{
    "root": true,
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": [ "error", 4 ],
        "max-len": [ "error", 200, 2, {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": false,
                "ignoreTemplateLiterals": false
            }
        ]
    }
}